Algoritmo CalcularAreaVolumenYPerimetro
    // Declaración de variables
    Definir arista, area, volumen, perimetro, raiz_tres como Real
	
    // Asignación de valores
    raiz_tres <- 1.732 // Valor aproximado de la raíz cuadrada de 3
    Escribir "Ingrese la longitud de la arista del octaedro:"
    Leer arista
	
    // Cálculo del perímetro de la base
    perimetro <- 3 * arista
    Escribir "El perímetro de la base del octaedro es:", perimetro
	
    // Cálculo del área
    area <- 2 * raiz_tres * arista * arista
    Escribir "El área del octaedro es:", area
	
    // Cálculo del volumen
    volumen <- (raiz_tres / 3) * arista * arista * arista
    Escribir "El volumen del octaedro es:", volumen
	
FinAlgoritmo
