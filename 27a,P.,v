Algoritmo CalcularAreaVolumenYPerimetro
    // Definición de variables
    Definir arista, area, volumen, perimetro Como Real;
    
    // Solicitar la longitud de la arista al usuario
    Escribir "Ingrese la longitud de la arista del icosaedro regular:";
    Leer arista;
    
    // Cálculo del perímetro
    perimetro <- 30 * arista;
    
    // Cálculo del área
    area <- 5 * (raiz(3)) * (arista^2);
    
    // Cálculo del volumen
    volumen <- (5/12) * (3 + raiz(5)) * (arista^3);
    
    // Mostrar resultados
    Escribir "El perímetro del icosaedro regular es: ", perimetro, " unidades.";
    Escribir "El área del icosaedro regular es: ", area, " unidades cuadradas.";
    Escribir "El volumen del icosaedro regular es: ", volumen, " unidades cúbicas.";
	FinAlgoritmo

